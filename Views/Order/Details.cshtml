@model AmazonMVC.Models.Order

@{
    ViewData["Title"] = $"Order #{Model.OrderId} Details";
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Order" asp-action="Index">Orders</a></li>
            <li class="breadcrumb-item active">Order #@Model.OrderId</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h5 class="mb-0">Order #@Model.OrderId</h5>
            <span class="badge @(Model.OrderStatus == "Delivered" ? "bg-success" : 
                                  Model.OrderStatus == "Shipped" ? "bg-info" : 
                                  Model.OrderStatus == "Pending" ? "bg-warning" : "bg-secondary")">
                @Model.OrderStatus
            </span>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="text-muted">ORDER DATE</h6>
                    <p>@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">TOTAL</h6>
                    <p class="text-danger fw-bold">$@Model.TotalAmount.ToString("0.00")</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">SHIPPING ADDRESS</h6>
                    <p>@Model.ShippingAddress</p>
                </div>
            </div>

            <h5 class="mt-4">Order Items</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Unit Price</th>
                        <th>Quantity</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Product Name</td>
                        <td>$199.99</td>
                        <td>1</td>
                        <td class="text-end">$@Model.TotalAmount.ToString("0.00")</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Subtotal:</td>
                        <td class="text-end">$@Model.TotalAmount.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Shipping:</td>
                        <td class="text-end">$0.00</td>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Tax:</td>
                        <td class="text-end">$0.00</td>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="text-end text-danger fw-bold">$@Model.TotalAmount.ToString("0.00")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
